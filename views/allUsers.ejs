<title>Shelter</title>
<link rel=stylesheet href=/index.css>
<main>
  <h1>Shelter</h1>
  <div class=grid>
    <% User.forEach(function (user) { %>
    <article class=user>
      <a class="frame block-link" href="/<%= user.id %>">
        <figure class="frame-image frame-image-reveal">
            <img src="/image/<%= user.image %>.jpg" alt>
        </figure>
        <h2><%= user.first_name %></h2>
        <p class=capitalize><%= user.gender %> Â· <%= user.age %> years old</p>
      </a>
    </article>
    <% }) %>
  </div>
</main>
